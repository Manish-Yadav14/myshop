generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  username String
  email String @unique
  password String

  carts Cart[]
}

model Products{
  id String @id @default(uuid())
  name String
  description String
  price Int
  stock Int @default(1000)
  category String
  images String[] @default([])
  userRef String @default("admin")
}


model Cart {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      String       @unique
  items       Json
}

